# ══════════════════════════════════════════════════════════════
# AI Virtual Try-On – Environment Variables
# SD 1.5 Prototype Mode (fits in 6GB VRAM)
# Copy this to .env and adjust as needed.
# ══════════════════════════════════════════════════════════════

# ── Model Configuration ────────────────────────────────────────
INPAINTING_MODEL_ID=runwayml/stable-diffusion-inpainting

# ── Runtime ────────────────────────────────────────────────────
DEVICE=cuda
USE_FP16=true
USE_XFORMERS=true
NUM_INFERENCE_STEPS=30
GUIDANCE_SCALE=7.5
OUTPUT_SIZE=512
STRENGTH=0.85

# ── Identity Preservation ─────────────────────────────────────
USE_REFINER=false
REFINER_STRENGTH=0.2
REFINER_STEPS=20
FACE_MASK_PADDING=30
IP_ADAPTER_SCALE=0.7
FACE_IDENTITY_ENABLED=false

# ── S3-Compatible Storage ──────────────────────────────────────
# Leave blank for base64 fallback (fine for local testing)
S3_BUCKET=tryon-results
S3_ENDPOINT_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
RESULT_URL_EXPIRY_SECONDS=3600

# ── API ────────────────────────────────────────────────────────
MAX_UPLOAD_SIZE_MB=20
ALLOWED_ORIGINS=["*"]

# ── Paths ──────────────────────────────────────────────────────
TMP_DIR=C:/tmp/tryon
MODELS_CACHE_DIR=C:/tryon_models
